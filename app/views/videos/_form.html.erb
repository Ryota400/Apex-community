<%= form_with model: video, local: true do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :best_movie %>
      <br>
      <%= f.file_field :best_movie, :accept => 'video/mp4', onchange: 'previewImage(preview)'  %>
      <%= f.hidden_field :best_movie_cache %>
    </div>

    <div class='mt-3 mb-3'>
      <%= video_tag(@video.best_movie.url,
                    id: 'preview',
                    :controls => true, :autoplay => true, :muted => true,
                    size: '600x400') %>
    </div>

    <%= f.submit class: 'btn btn-primary' %>
<% end %>
