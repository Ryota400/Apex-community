<ul class='crud-menu-btn list-inline float-right'>
  <li class="list-inline-item">
    <%= link_to edit_video_path(video), id: "button-edit-#{video.id}" do %>
     <%= icon 'fa', 'pen' %>
    <% end %>
  </li>
  <li class="list-inline-item">
    <%= link_to video_path(video), id: "button-delete-#{video.id}", method: :delete, data: { confirm: t('defaults.message.delete_confirm') } do %>
     <%= icon 'fas', 'trash' %>
    <% end %>
  </li>
</ul>
