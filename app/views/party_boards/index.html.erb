<% content_for(:title, t('.title')) %>
<div class="container pt-3">
   <div class="row">
     <div class="col-lg-6 offset-lg-4">
       <%= render 'search_form', url: party_boards_path %>
     </div>
     <%= paginate @party_boards %>
   </div>

   <div class="row">
     <div class="col-12">
       <div class="row">
          <% if @party_boards.present? %>
             <%= render @party_boards %>
          <% else %>
             <p><%= t('.no_result') %></p>
          <% end %>
       </div>
       <%= paginate @party_boards %>
     </div>
   </div>
</div>
