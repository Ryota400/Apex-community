<% content_for(:title, @party_board.title) %>
<div class="container pt-5">
  <div class="row mb-3">
    <div class="col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <!-- 掲示板内容 -->
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <div class='col-md-3'>
            </div>
            <div class='col-md-9'>
              <h3 class="d-inline"><%= @party_board.title %></h3>
              <%= render 'crud_menus', party_board: @party_board if current_user.own?(@party_board) %>
              <ul class="list-inline">
                <li class="list-inline-item">by <%= @party_board.user.decorate.full_name %></li>
                <li class="list-inline-item"><%= l @party_board.created_at, format: :long  %></li>
              </ul>
            </div>
          </div>
          <p><%= simple_format(@party_board.body) %></p>
        </div>
      </article>
    </div>
  </div>

  <!-- コメントフォーム -->
  <%= render 'comments/form', { party_board: @party_board, comment: @comment } %>

  <!-- コメントエリア -->
  <%= render 'comments/comments', { comments: @comments } %>
</div>
