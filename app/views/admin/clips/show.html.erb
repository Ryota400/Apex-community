<% content_for(:title, @clip.title) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <div class="text-right mb-3">
        <%= link_to t('defaults.edit'), edit_admin_clip_path(@clip), class: 'btn btn-success' %>
        <%= link_to t('defaults.delete'), admin_clip_path(@clip), method: :delete, data: { confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-danger' %>
      </div>
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"><%= Clip.human_attribute_name(:id) %></th>
          <td><%= @clip.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= Clip.human_attribute_name(:title) %></th>
          <td><%= @clip.title %></td>
        </tr>
        <tr>
          <th scope="row"><%= Clip.human_attribute_name(:user) %></th>
          <td><%= @clip.user.decorate.user_name %></td>
        </tr>
        <tr>
          <th scope="row"><%= Clip.human_attribute_name(:movie) %></th>
          <td><%= link_to @clip.movie_url.to_s do %>
                <%= video_tag(@clip.movie.to_s, :controls => true, :muted => true, size: "300x300") %>
              <% end %>
          </td>
        </tr>
        <tr>
          <th scope="row"><%= Clip.human_attribute_name(:created_at) %></th>
          <td><%= l @clip.created_at, format: :long %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
