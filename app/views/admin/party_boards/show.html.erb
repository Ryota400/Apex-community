<% content_for(:title, @party_board.title) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <div class="text-right mb-3">
        <%= link_to t('defaults.edit'), edit_admin_party_board_path(@party_board), class: 'btn btn-success' %>
        <%= link_to t('defaults.delete'), admin_party_board_path(@party_board), method: :delete, data: { confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-danger' %>
      </div>
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"><%= PartyBoard.human_attribute_name(:id) %></th>
          <td><%= @party_board.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= PartyBoard.human_attribute_name(:title) %></th>
          <td><%= @party_board.title %></td>
        </tr>
        <tr>
          <th scope="row"><%= PartyBoard.human_attribute_name(:user) %></th>
          <td><%= @party_board.user.decorate.user_name %></td>
        </tr>
        <tr>
          <th scope="row"><%= PartyBoard.human_attribute_name(:recruit) %></th>
          <td><%= @party_board.recruit %></td>
        </tr>
        <tr>
          <th scope="row"><%= Video.human_attribute_name(:created_at) %></th>
          <td><%= l @video.created_at, format: :long %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
