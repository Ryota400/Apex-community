<div class="col-sm-12 col-lg-4 mb-3">
  <div id="clip-id-<%= clip.id %>">
   <div class="card">
    <%= video_tag clip.movie_url, class: 'card-img-top', size: '300x200' %>
    <div class="card-body">
      <h4 class="card-title">
        <%= link_to clip.title, clip_path(clip)  %>
      </h4>
      <% if current_user.own?(clip) %>
        <%= render 'crud_menus', clip: clip %>
      <% else %>
        <%= render 'like_button', clip: clip  %>
      <% end %>
      <ul class="list-inline">
        <li class="list-inline-item">
          <%= link_to (image_tag clip.user.avatar_url, size: '50x50', class: 'rounded-circle'), user_path(clip.user) %>
          <%= clip.user.decorate.full_name %>
        </li>
        <li class="list-inline-item">
          <%= icon 'far', 'calendar' %>
          <%= l clip.created_at, format: :long %>
        </li>
      </ul>
    </div>
  </div>
 </div>
</div>
