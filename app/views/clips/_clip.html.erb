<div class="col-sm-12 col-lg-4 mb-3">
  <div id="clip-id-<%= clip.id %>">
   <div class="card">
    <div class="card-body">
      <h4 class="card-title">
          <%= link_to clip.title, clip_path(clip)  %>
      </h4>
        <%= render 'crud_menus', clip: clip if current_user.own?(clip)  %>
      <ul class="list-inline">
        <li class="list-inline-item">
          <%= icon 'far', 'user' %>
          <%= clip.user.decorate.full_name %>
        </li>
        <li class="list-inline-item">
          <%= icon 'far', 'calendar' %>
          <%= l clip.created_at, format: :long %>
        </li>
      </ul>
    </div>
  </div>
 </div>
</div>
