<%= form_with model: clip, local: true do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :clip %>
      <br>
      <%= f.file_field :movie, :accept => 'video/mp4',  onchange: 'previewImage(preview)'  %>
      <%= f.hidden_field :movie_cache %>
    </div>

    <div class='mt-3 mb-3'>
      <%= video_tag(@clip.movie.url,
                    id: 'preview',
                    :controls => true, :autoplay => true, :muted => true,
                    size: '600x400') %>
    </div>

    <%= f.submit class: 'btn btn-primary' %>
<% end %>
