<%= search_form_for @q, url: users_path do |f| %>
    <div class="row">
      <div class="form-inline align-items-center mx-auto">
        <div class="col-auto">
          <%= f.search_field :user_name_or_genre_cont, class: 'form-control', placeholder: t('defaults.search_word') %>
        </div>
        <div class="col-auto">
          <%= f.submit class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
<% end %>
