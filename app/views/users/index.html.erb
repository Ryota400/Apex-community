<% content_for(:title, t('.title')) %>
<div class="container mb-5 pt-2">
  <h1><%= t('.title') %></h1>
  <div class="user">
    <div style="text-align: center"><img src="https://i.gyazo.com/9f83601674c99f7c59f406b16e37ecb2.png"/></div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-12 mb-3">
      <%= render 'search_form' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th></th>
          <th scope="col"><%= User.human_attribute_name(:user_name) %></th>
          <th scope="col"><%= User.human_attribute_name(:genre) %></th>
          <th scope="col"><%= User.human_attribute_name(:geme) %></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <%= render @users %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <!-- ページネーション -->
      <%= paginate @users %>
    </div>
  </div>
</div>
